Type: Package
Package: estimateW
Title: Estimation of Spatial Weight Matrices
Version: 0.1.0
Authors@R: c(
    person("Tamas", "Krisztin", , "krisztin@iiasa.ac.at", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0002-9241-8628")),
